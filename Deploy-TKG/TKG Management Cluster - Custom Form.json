    "schema": {
        "deploymentName": {
            "label": "TKG Cluster Name",
            "description": "Deployment Name",
            "signpost": "TKG Cluster Name. Lowercase, numbers and hyphens only.",
            "type": {
                "dataType": "string",
                "isMultiple": false
            },
            "constraints": {
                "required": true,
                "max-value": 80,
                "pattern": {
                    "value": "^[0-9a-z-]+$",
                    "message": "Lowercase, numbers and hyphens only."
                }
            }
        },
        "description": {
            "label": "Description",
            "description": "Description",
            "type": {
                "dataType": "string",
                "isMultiple": false
            },
            "constraints": {
                "max-value": 256
            }
        },
        "project": {
            "label": "Project",
            "description": "Project",
            "type": {
                "dataType": "string",
                "isMultiple": false
            },
            "valueList": {
                "id": "projects",
                "type": "scriptAction"
            },
            "constraints": {
                "required": true
            }
        },
        "vCenter_Datacenter": {
            "label": "vCenter Datacenter",
            "description": "vCenter Datacenter Name (e.g. sc2dc03)",
            "signpost": "vCenter Datacenter Name (e.g. sc2dc03)",
            "type": {
                "dataType": "string",
                "isMultiple": false
            },
            "valueList": {
                "id": "com.vmware.cmbu/getVcDatacenterNames",
                "type": "scriptAction",
                "parameters": []
            },
            "constraints": {
                "required": true
            }
        },
        "vCenter_Folder": {
            "label": "vCenter Folder",
            "description": "vCenter VM folder path for TKG deployments (e.g. /sc2dc03/vm/TKG)",
            "signpost": "vCenter VM folder path for TKG deployments (e.g. /sc2dc03/vm/TKG)",
            "type": {
                "dataType": "string",
                "isMultiple": false
            },
            "default": "",
            "valueList": {
                "id": "com.vmware.cmbu/getVcVmFolderPathsByDatacenter",
                "type": "scriptAction",
                "parameters": [{
                    "$type": {
                        "dataType": "string",
                        "isMultiple": false
                    },
                    "dataCenter": "vCenter_Datacenter"
                }]
            },
            "constraints": {
                "required": true
            }
        },
        "dropDown_8d231b2d": {
            "label": "vCenter Cluster",
            "type": {
                "dataType": "string"
            },
            "valueList": {
                "id": "com.vmware.cmbu/getVcResourceByDatacenter",
                "type": "scriptAction",
                "parameters": [{
                    "$type": {
                        "dataType": "string",
                        "isMultiple": false
                    },
                    "dataCenter": "vCenter_Datacenter"
                }]
            },
            "placeholder": "",
            "constraints": {
                "required": true
            }
        },
        "vCenter_Datastore": {
            "label": "vCenter Datastore",
            "description": "vCenter Datastore Name (e.g. sc2c02vsan01)",
            "signpost": "vCenter Datastore Name (e.g. sc2c02vsan01)",
            "type": {
                "dataType": "string",
                "isMultiple": false
            },
            "default": "",
            "valueList": {
                "id": "com.vmware.cmbu/getVcDatastoreNamesByCluster",
                "type": "scriptAction",
                "parameters": [{
                    "$type": {
                        "dataType": "string",
                        "isMultiple": false
                    },
                    "cluster": "dropDown_8d231b2d"
                }]
            },
            "constraints": {
                "required": true
            }
        },
        "vCenter_Network": {
            "label": "vCenter Network",
            "description": "vCenter Network Name (e.g. Mgmt VMs)",
            "signpost": "vCenter Network Name (e.g. Mgmt VMs)",
            "type": {
                "dataType": "string",
                "isMultiple": false
            },
            "default": "",
            "valueList": {
                "id": "com.vmware.cmbu/getVcNetworkNamesByCluster",
                "type": "scriptAction",
                "parameters": [{
                    "$type": {
                        "dataType": "string",
                        "isMultiple": false
                    },
                    "cluster": "dropDown_8d231b2d"
                }]
            },
            "constraints": {
                "required": true
            }
        },
        "TKG_Cluster_Type": {
            "label": "TKG Cluster Plan",
            "description": "Development or Production Cluster",
            "signpost": "Development or Production Cluster",
            "type": {
                "dataType": "string",
                "isMultiple": false
            },
            "default": "",
            "valueList": [{
                    "value": "prod",
                    "label": "Production",
                    "description": "Three node HA control plane"
                },
                {
                    "value": "dev",
                    "label": "Development",
                    "description": "Single node control plane"
                }
            ]
        },
        "TKG_VM_Size": {
            "label": "TKG Node Size",
            "description": "TKG Management VM size",
            "signpost": "TKG Management VM size",
            "type": {
                "dataType": "string",
                "isMultiple": false
            },
            "default": "",
            "valueList": [{
                    "value": "small",
                    "label": "Small",
                    "description": "1 CPU - 2GB RAM - 20GB Disk"
                },
                {
                    "value": "medium",
                    "label": "Medium",
                    "description": "2 CPU - 4GB RAM - 40GB Disk"
                },
                {
                    "value": "large",
                    "label": "Large",
                    "description": "2 CPU - 8GB RAM - 40GB Disk"
                },
                {
                    "value": "extra-large",
                    "label": "Extra Large",
                    "description": "4 CPU - 16GB RAM - 80GB Disk"
                }
            ]
        },
        "TKG_SSH_Key": {
            "label": "SSH Public Key",
            "description": "TKG SSH Public Key",
            "signpost": "TKG SSH Public Key",
            "type": {
                "dataType": "string",
                "isMultiple": false
            },
            "default": ""
        },
        "vCenter_Resource": {
            "label": "vCenter_Resource",
            "description": "vCenter Resource path (e.g. /sc2dc03/host/sc2c04-ATMM/Resources)",
            "signpost": "vCenter Resource path (e.g. /sc2dc03/host/sc2c04-ATMM/Resources)",
            "type": {
                "dataType": "string",
                "isMultiple": false
            },
            "default": {
                "bind": {
                    "values": [
                        "`/`",
                        "vCenter_Datacenter",
                        "`/host/`",
                        "dropDown_8d231b2d",
                        "`/Resources`"
                    ],
                    "operator": "concatenate"
                }
            },
            "valueList": {
                "id": "com.vmware.cmbu/getVcResourceByDatacenter",
                "type": "scriptAction",
                "parameters": [{
                    "$type": {
                        "dataType": "string",
                        "isMultiple": false
                    },
                    "dataCenter": "vCenter_Datacenter"
                }]
            },
            "constraints": {
                "required": false
            }
        },
        "TKG_Cluster_Name": {
            "label": "TKG_Cluster_Name",
            "description": "TKG Cluster Name",
            "signpost": "TKG Cluster Name",
            "type": {
                "dataType": "string",
                "isMultiple": false
            },
            "default": {
                "bind": "deploymentName"
            }
        },
        "checkbox_9df37114": {
            "label": "Advanced Options",
            "type": {
                "dataType": "boolean"
            },
            "constraints": {}
        },
        "text_bed8c348": {
            "type": {
